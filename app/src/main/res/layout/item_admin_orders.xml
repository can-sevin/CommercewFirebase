<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_admin_orders_product"
            android:src="@mipmap/ic_launcher"
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_admin_orders_product_name"
                android:paddingLeft="8dp"
                android:textSize="16sp"
                android:text="UserName"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_admin_orders_total_price"
                android:paddingLeft="8dp"
                android:text="Total Price"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_admin_orders_product_quantity"
                android:paddingLeft="8dp"
                android:textSize="8sp"
                android:text="Product Quantity"
                android:layout_gravity="start"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_admin_orders_product_address"
                android:paddingLeft="8dp"
                android:text="Product Address"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_admin_orders_product_date"
                android:paddingLeft="8dp"
                android:textSize="8sp"
                android:text="Product Date"
                android:layout_gravity="start"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                android:layout_width="128dp"
                android:layout_height="48dp">
                <Button
                    android:background="@drawable/button_corners"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:fontFamily="@font/opensans"
                    android:textStyle="bold"
                    android:text="Show ThÄ±s Order Products"
                    android:layout_gravity="center"
                    android:id="@+id/btn_show_other_products"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>