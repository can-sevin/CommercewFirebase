<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginStart="-30dp"
                app:cardCornerRadius="26dp"
                android:layout_width="72dp"
                android:layout_height="48dp">
                <ImageView
                    android:id="@+id/settings_btn_home_back"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            </androidx.cardview.widget.CardView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setting_profile_image"
                android:layout_marginStart="320dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_person_outline_black_24dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
        </LinearLayout>
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:text="Profile"
            android:fontFamily="@font/opensans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="32dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:paddingLeft="64dp"
                android:id="@+id/edt_setting_email"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans"
                android:layout_height="56dp"
                android:background="@drawable/rounded_inputtext" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:hint="Name"
                android:paddingLeft="64dp"
                android:id="@+id/edt_setting_name"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans"
                android:layout_height="56dp"
                android:background="@drawable/rounded_inputtext" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:inputType="phone"
                android:hint="Phone"
                android:paddingLeft="64dp"
                android:id="@+id/edt_setting_phone"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans"
                android:layout_height="56dp"
                android:background="@drawable/rounded_inputtext" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/opensans"
                android:paddingLeft="64dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_gravity="center"
                android:layout_height="56dp"
                android:layout_width="match_parent"
                android:id="@+id/edt_setting_pass"
                android:background="@drawable/rounded_inputtext"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="16dp"
            android:layout_width="128dp"
            android:layout_height="48dp">
            <Button
                android:background="@drawable/button_corners"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="24dp"
                android:text="Save"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans"
                android:id="@+id/btn_save_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>