<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backadmin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.AddProductFragment">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="26dp"
            android:layout_width="72dp"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/btn_product_logout"
                android:layout_gravity="end"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textColor="#FFF"
            android:textStyle="bold"
            android:fontFamily="@font/opensans"
            android:textSize="40sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:text="Add Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--<androidx.cardview.widget.CardView
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cat_recycler"
                android:layout_gravity="top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>-->
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="16dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:inputType="text"
                android:hint="Product Name"
                android:paddingLeft="64dp"
                android:id="@+id/edt_product_name"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans"
                android:layout_height="56dp"
                android:background="@drawable/rounded_inputtext" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:inputType="text"
                android:hint="Product Description"
                android:paddingLeft="64dp"
                android:id="@+id/edt_product_desc"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans"
                android:layout_height="56dp"
                android:background="@drawable/rounded_inputtext" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:inputType="text"
                android:hint="Product Category"
                android:paddingLeft="64dp"
                android:id="@+id/edt_product_category"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans"
                android:layout_height="56dp"
                android:background="@drawable/rounded_inputtext" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:inputType="number"
                android:hint="Product Quantity"
                android:paddingLeft="64dp"
                android:id="@+id/edt_product_quantity"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans"
                android:layout_height="56dp"
                android:background="@drawable/rounded_inputtext" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="56dp">
            <EditText
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:inputType="number"
                android:hint="Product price"
                android:paddingLeft="64dp"
                android:id="@+id/edt_product_price"
                android:layout_width="match_parent"
                android:fontFamily="@font/opensans"
                android:layout_height="56dp"
                android:background="@drawable/rounded_inputtext" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="168dp"
            android:layout_height="48dp">
            <Button
                android:background="@drawable/button_corners"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:text="Add Image"
                android:layout_gravity="center"
                android:id="@+id/btn_add_img"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="168dp"
            android:layout_height="48dp">
            <Button
                android:background="@drawable/button_corners"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:text="Add Product"
                android:layout_gravity="center"
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="-30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="168dp"
            android:layout_height="48dp">
            <Button
                android:background="@drawable/button_corners"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:text="Check Orders"
                android:layout_gravity="center"
                android:id="@+id/btn_new_orders"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>