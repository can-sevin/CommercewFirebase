<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.ConfirmFragment">
    <TextView
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:fontFamily="@font/opensans"
        android:textStyle="bold"
        android:text="Confirm your Shipment"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="-30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="56dp">
        <EditText
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:paddingLeft="64dp"
            android:id="@+id/edt_confirm_name"
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans"
            android:layout_height="56dp"
            android:background="@drawable/rounded_inputtext" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="-30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="56dp">
        <EditText
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="Number"
            android:paddingLeft="64dp"
            android:id="@+id/edt_confirm_number"
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans"
            android:layout_height="56dp"
            android:background="@drawable/rounded_inputtext" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="-30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="56dp">
        <EditText
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:inputType="textPostalAddress"
            android:hint="Address"
            android:paddingLeft="64dp"
            android:id="@+id/edt_confirm_address"
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans"
            android:layout_height="56dp"
            android:background="@drawable/rounded_inputtext" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="-30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="56dp">
        <EditText
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="City"
            android:paddingLeft="64dp"
            android:id="@+id/edt_confirm_city"
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans"
            android:layout_height="56dp"
            android:background="@drawable/rounded_inputtext" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txt_total_price_confirm"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:fontFamily="@font/opensans"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:layout_marginTop="36dp"
        android:layout_gravity="start"
        android:text="Total Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="-30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="32dp"
        android:layout_width="128dp"
        android:layout_height="48dp">
        <Button
            android:background="@drawable/button_corners"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:fontFamily="@font/opensans"
            android:textStyle="bold"
            android:text="ConfÄ±rm"
            android:layout_gravity="center"
            android:id="@+id/btn_confrimm"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>